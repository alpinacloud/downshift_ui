{
  "name": "downshift-ui",
  "version": "0.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git://github.com/alpinacloud/downshift-ui",
  "author": "Aram @ Alpina",
  "license": "WTFPL",
  "private": false,
  "files": [
    "dist/**/*"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/prettier/bin-prettier.js --parser typescript --print-width 120 --single-quote --trailing-comma es5 --write"
    ]
  },
  "scripts": {
    "build": "rm -rf dist && babel --config-file ./.babelrc src --out-dir dist --extensions \".ts,.tsx\" --copy-files && tsc --declaration --emitDeclarationOnly --removeComments && rm -rf dist/stories",
    "build:test": "tsc --declaration --emitDeclarationOnly --removeComments && rm -rf dist/stories",
    "lint": "tsc --noEmit",
    "push": "yarn build && yarn publish --production --ignore-optional",
    "start": "start-storybook -p 9099"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "babel-preset-minify": "^0.5.1",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1"
  },
  "dependencies": {
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "@popperjs/core": "^2.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.1.1",
    "react-popper": "^2.2.5"
  }
}
